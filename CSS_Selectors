package Selenium_PKG;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.chrome.ChromeOptions;

public class CSS_Selector {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
      System.setProperty("webdriver.chrome.driver", 
  "C:\\Chrome\\chromedriver-win64 (1)\\chromedriver-win64\\chromedriver.exe");
      ChromeOptions op=new ChromeOptions();
      op.setBinary("C:\\Chrome\\chrome-win64\\chrome-win64\\chrome.exe");
      WebDriver driver=new ChromeDriver();
      driver.get("https://www.flipkart.com/");
      driver.manage().window().maximize();
      
      //Css selector is combination of tag and #id,.class attribute="value" tag.classname[attribute="value"]
     // driver.findElement(By.cssSelector("input.Pke_EE")).sendKeys("mobile");
      //or we can use without using tagname
      //driver.findElement(By.cssSelector(".Pke_EE")).sendKeys("mobile");     
      
      
      //Tagname[attribute="value"]
     // driver.findElement(By.cssSelector("input[name=\"q\"]")).sendKeys("shirt");
      
      //tag.classname[attribute="value"] to differentiate the web element when we have tag and classname is same so it will differentiate using attribute
      driver.findElement(By.cssSelector("input.Pke_EE[name=\'q\']")).sendKeys("shirt");
      
	}

}
